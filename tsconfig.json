{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "rootDir": ".",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,

    "lib": ["ES2020"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", ".vscode-test"]
}
